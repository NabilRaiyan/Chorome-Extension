{
    "manifest_version": 3,
    "name": "My Vite Extension",
    "version": "1.0.0",
    "description": "A basic chrome extension with only required keys",
    "icons": {
        "32": "icon-32.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}